<%- include("partials/header") %>
<body>
    <div class="table-container">
        <h2>UPDATE TODO</h2>

        <a class="btn" href="/">Back</a>

        <form action="/update-todo/<%= todo1._id %>" method="post">
            <div class="update-todo">
                <div class="form-group">
                    <label for="title" class="text-light">Title</label>
                    <input type="text" name="title" value="<%= todo1.title %>" placeholder="Type todo here">
                </div>
                <div class="form-group">
                    <label for="desc" class="text-light">Title</label>
                    <input type="text" name="desc" value="<%= todo1.desc %>" placeholder="Type Description here">
                </div>
                <div class="form-group">
                    <button type="submit">Save</button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>